{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "db:create",
      "request": "launch",
      "skipFiles": ["<node_internals>/*"],
      "program": "${workspaceFolder}/bin/create.js",
      "env": {
        "DATABASE": "db.sqlite"
      }
    },
    {
      "type": "node",
      "name": "db:destroy",
      "request": "launch",
      "skipFiles": ["<node_internals>/*"],
      "program": "${workspaceFolder}/bin/destroy.js",
      "env": {
        "DATABASE": "db.sqlite"
      }
    },
    {
      "type": "node",
      "name": "db:reset",
      "request": "launch",
      "skipFiles": ["<node_internals>/*"],
      "program": "${workspaceFolder}/bin/reset.js",
      "env": {
        "DATABASE": "db.sqlite"
      }
    },
    {
      "type": "node",
      "name": "server",
      "request": "launch",
      "skipFiles": ["<node_internals>/*"],
      "program": "${workspaceFolder}/server.js",
      "env": {
        "DATABASE": "db.sqlite",
        "DEBUG": "devacademy*"
      },
      "restart": true,
      "sourceMaps": false,
      "outputCapture": "std"
    }
  ]
}
